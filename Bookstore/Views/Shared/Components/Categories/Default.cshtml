@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    @*This goes in the place of the put something here later. It provides the ability to filter by book category*@
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" class="btn btn-block btn-outline-secondary">Home</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" 
           class="btn @(ViewBag.SelectedCategory == c ? "btn-block btn-primary" : "btn-block btn-outline-secondary")">@c</a>
    }
</div>